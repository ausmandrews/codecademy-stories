<div class="contact-main">
  <div class="content container">
    <h1>The latest Update from Stories</h1>
    <div class="row">
      <div class="col-md-4 col-md-4-offset"></div>
      <div class="col-md-4">
      	<%= form_for(@new_signup) do |f| %>  
  				<div class="field"> 
    				<%= f.label :mail_address %><br> 
    				<%= f.text_area :email %> 
  				</div> 
  				<div class="actions"> 
    				<%= f.submit "Join" %> 
  				</div> 
				<% end %>
      </div>
      
    </div>
  </div>
</div>